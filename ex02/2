#include "Fixed.hpp"

#include <iostream>

int main(void)
{
  Fixed a;
  Fixed const b(Fixed(5.05f) + Fixed(2));
  Fixed const c(Fixed(5.05f) - Fixed(2));
  Fixed const d(Fixed(5.05f) * Fixed(2));
  Fixed e(Fixed(5.05f) / Fixed(2));

  std::cout << "multiplcation" << std::endl;
  std::cout << d << std::endl;
  std::cout << "division" << std::endl;
  std::cout << e << std::endl;
  std::cout << "multiplcation" << std::endl;
  std::cout << d << std::endl;
  std::cout << "division" << std::endl;
  std::cout << e << std::endl;

  std::cout << "increment" << std::endl;
  std::cout << a << std::endl;
  std::cout << ++a << std::endl;
  std::cout << a << std::endl;
  std::cout << a++ << std::endl;
  std::cout << a << std::endl;

  std::cout << "decrement" << std::endl;
  std::cout << a << std::endl;
  std::cout << --a << std::endl;
  std::cout << a << std::endl;
  std::cout << a-- << std::endl;
  std::cout << a << std::endl;

  a = d * 2;
  // std::cout << "max" << std::endl;
  std::cout << Fixed::max(a, d) << std::endl;
  std::cout << Fixed::max(a, e) << std::endl;
  // std::cout << "min" << std::endl;
  std::cout << Fixed::min(a, d) << std::endl;
  std::cout << Fixed::min(a, e) << std::endl;
  return 0;
}
